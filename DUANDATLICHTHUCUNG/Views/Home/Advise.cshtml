
@{
    ViewBag.Title = "Advise";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ var userInfomatiom = (YTeAspMVC.Models.User)Session["USER"]; }
<section class="breadcrumb-area" style="background-image: url(/Content/images/resources/breadcrumb-bg.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="inner-content clearfix">
                    <div class="title float-left">
                        <h2>Tư vấn</h2>
                    </div>
                    <div class="breadcrumb-menu float-right">
                        <ul class="clearfix">
                            <li><a href="/Home/Index">Home</a></li>
                            <li><i class="fa fa-angle-right" aria-hidden="true"></i></li>
                            <li class="active">Tư vấn</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@if (ViewBag.Msg == "1")
{
    <div class="toast" data-delay="1000" style="position:fixed; top: 100PX; left: 40PX;z-index: 2000;width: 300px">
        <script>
            swal({
                title: 'Gửi câu hỏi thành công!',
                /* text: 'Redirecting...', */
                icon: 'success',
                timer: 3000,
                buttons: true,
                type: 'success'
            })
        </script>
    </div>
}
<!--End breadcrumb area-->
<!--Start Contact info map area-->
<!--End Contact info map area-->
<!--Start contact form area-->
<section class="contact-form-area">
    <div class="container">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                <div class="contact-form">
                    @if (userInfomatiom != null)
                    {
                        <form name="contact_form" class="default-form" action="/Home/Advise" method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="input-box">
                                        <input type="text" class="form-control" name="FullName" value="@userInfomatiom.FullName" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-box">
                                        <input type="email" class="form-control" name="Email" value="@userInfomatiom.Email" required>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="input-box">
                                        <textarea class="form-control" name="Question" placeholder="Nội dung câu hỏi" required></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="button-box">
                                        <button class="btn-one" type="submit">Gửi câu hỏi</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        <form name="contact_form" class="default-form" action="/Home/Advise" method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="input-box">
                                        <input type="text" class="form-control" name="FullName" placeholder="Họ tên" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-box">
                                        <input type="email" class="form-control" name="Email" placeholder="Email" required>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="input-box">
                                        <textarea class="form-control" name="Question" placeholder="Nội dung câu hỏi" required></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="button-box">
                                        <button class="btn-one" type="submit">Gửi câu hỏi</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

